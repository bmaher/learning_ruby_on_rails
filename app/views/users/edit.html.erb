<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
	<%= render 'fields', :f => f, :@object => f.object %>
	<div class="actions">
		<%= f.submit "Update" %>
	</div>
<% end %>

<div class="edit_gravatar">
	<%= gravatar_for @user, :size => "107" %><br />
	<a href="http://gravatar.com/emails" target=_blank>change Gravatar</a>
</div>