<%= form_for current_user.relationships.build(:followed_id => @user),
											  :remote => true do |f| %>
    <div>
		<% f.hidden_field :followed_id %>
	</div>
	<div class="actions">
		<%= f.submit "Follow" %>
	</div>
	<input id="relationship_followed_id" name="relationship[followed_id]"
	 type="hidden" value="<%= @user.id %>"/>
<% end %>